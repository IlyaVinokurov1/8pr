<Window x:Class="Weather_Vinokurov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Погода" Height="600" Width="800">

    <StackPanel>
        <!-- Панель поиска -->
        <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBox Name="CityTextBox" 
                         Width="300" 
                         Height="30" 
                         Margin="5"
                         VerticalContentAlignment="Center"/>
                <Button Name="SearchButton" 
                        Content="Найти" 
                        Click="SearchButton_Click"
                        Width="80" 
                        Height="30" 
                        Margin="5"/>
            </StackPanel>
        </Border>

        <!-- Информация и выбор дня -->
        <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel>
                <TextBlock Name="LocationText" 
                           Text="Пермь" 
                           FontSize="16" 
                           Margin="5"/>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <ComboBox Name="Days" 
                              Width="150" 
                              Height="30" 
                              Margin="0,0,10,0"
                              SelectionChanged="SelectDay"/>
                    <Button Content="Обновить" 
                            Click="UpdateWeather" 
                            Width="80" 
                            Height="30"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Заголовки таблицы -->
        <Grid Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Время" Grid.Column="0" Margin="5"/>
            <TextBlock Text="Погода" Grid.Column="1" Margin="5"/>
            <TextBlock Text="Осадки" Grid.Column="2" Margin="5"/>
            <TextBlock Text="Влажность" Grid.Column="3" Margin="5"/>
        </Grid>

        <!-- Прогнозы -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Name="parent" Margin="10"/>
        </ScrollViewer>
    </StackPanel>
</Window>