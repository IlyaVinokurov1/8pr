<Window x:Class="Weather_Vinokurov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather_Vinokurov"
        mc:Ignorable="d"
        Title="Weather App" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <TextBox Name="txtCity" Width="200" 
                     Text="Пермь" Margin="0,0,10,0"/>
            <Button Content="Получить погоду" 
                    Click="GetWeatherByCity" 
                    Margin="0,0,10,0" Width="120"/>
            <ComboBox SelectionChanged="SelectDay"
                      Name="Days"
                      Width="200" Margin="0,0,10,0"/>
            <Button Content="Обновить"
                    Click="UpdateWeather" Width="80"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="10">
            <StackPanel Name="parent">
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>